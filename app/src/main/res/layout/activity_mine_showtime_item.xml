<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">
    <TextView
        android:id="@+id/mine_showtime_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.06.2 12:13"
        android:layout_gravity="bottom"/>

            </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp">
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dingdang"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
           </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mine_showtime_iv1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/pet"
                        android:scaleType="fitXY"
                        android:padding="4dp"/>

                    <ImageView
                        android:id="@+id/mine_showtime_iv2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/pet"
                        android:scaleType="fitXY"
                        android:padding="4dp"/>

                    <ImageView
                        android:id="@+id/mine_showtime_iv3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/pet"
                        android:scaleType="fitXY"
                        android:padding="4dp"/>
                </LinearLayout>
               <TextView
                   android:id="@+id/mine_showtime_content"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="今天我吃了10斤狗粮，主人和他的小伙伴惊呆了。"
                   android:textSize="18sp"/>
            </LinearLayout>


</LinearLayout>


</FrameLayout>